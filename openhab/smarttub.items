// SmartTub MQTT Items Configuration for OpenHAB 5
// Basierend auf echten MQTT Topics

// ============================================================================
// Gruppen
// ============================================================================
Group SmartTub "SmartTub Spa" <bath>
Group SmartTub_Status "Status" <status> (SmartTub)
Group SmartTub_Heater "Heizung" <heating> (SmartTub)
Group SmartTub_Pumps "Pumpen" <pump> (SmartTub)
Group SmartTub_Lights "Beleuchtung" <light> (SmartTub)

// ============================================================================
// Bridge & Meta Status
// ============================================================================
String SmartTub_BridgeStatus "Bridge Status [%s]" <network> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:bridge_status" }
String SmartTub_MetaErrors "Meta Errors" <error> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:meta_errors" }
String SmartTub_MetaMQTT "Meta MQTT" <network> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:meta_mqtt" }

// ============================================================================
// Discovery
// ============================================================================
String SmartTub_DiscoveryStatus "Discovery Status [%s]" <settings> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:discovery_status" }
String SmartTub_DiscoveryResult "Discovery Result" <settings> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:discovery_result" }

// ============================================================================
// Spa Status
// ============================================================================
String SmartTub_SpaState "Spa Zustand [%s]" <status> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:spa_state" }
Number:Temperature SmartTub_WaterTemp "Wasser Temperatur [%.1f °C]" <temperature> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:spa_water_temp" }
DateTime SmartTub_SpaLastUpdated "Spa Letzte Aktualisierung [%1$tF %1$tR]" <time> (SmartTub_Status) { channel="mqtt:topic:<BROKER_ID>:smarttub_spa:spa_last_updated" }

