# ============================================================================
# SmartTub-MQTT Docker Compose Environment Variables
# ============================================================================
#
# IMPORTANT: Copy this file to .env and fill in your actual values
#
# Security Notice:
#   - Never commit .env to version control
#   - .env is already in .gitignore
#   - Use strong passwords for production
#

# ============================================================================
# SmartTub API Credentials (REQUIRED)
# ============================================================================

# Your SmartTub account email
SMARTTUB_EMAIL=your-email@example.com

# Option 1: Use password for authentication
SMARTTUB_PASSWORD=your-smarttub-password

# Option 2: Use token for authentication (alternative to password)
# Generate token via SmartTub API after login
# SMARTTUB_TOKEN=your-smarttub-token

# ============================================================================
# MQTT Broker Configuration
# ============================================================================

# MQTT broker username (optional, leave empty if no auth)
MQTT_USERNAME=

# MQTT broker password (optional, leave empty if no auth)
MQTT_PASSWORD=

# MQTT base topic (default: smarttub-mqtt)
MQTT_BASE_TOPIC=smarttub-mqtt

# MQTT QoS level (0, 1, or 2)
MQTT_QOS=1

# ============================================================================
# SmartTub API Settings
# ============================================================================

# Polling interval in seconds (default: 30)
# How often to fetch state from SmartTub API
SMARTTUB_POLLING_INTERVAL=30

# API request timeout in seconds (default: 10)
SMARTTUB_TIMEOUT=10

# Number of retries for failed API requests (default: 3)
SMARTTUB_RETRIES=3

# ============================================================================
# Discovery Settings
# ============================================================================

# Enable discovery mode on startup (default: false)
# Set to 'true' to scan all SmartTub capabilities and generate YAML
CHECK_SMARTTUB=false

# Discovery refresh interval in seconds (default: 86400 = 24h)
# How often to re-scan capabilities (only if CHECK_SMARTTUB=true)
DISCOVERY_REFRESH_INTERVAL=86400

# ============================================================================
# Web UI Configuration
# ============================================================================

# Enable Web UI (default: true)
WEB_ENABLED=true

# Web UI host (default: 0.0.0.0 for all interfaces)
WEB_HOST=0.0.0.0

# Web UI port (default: 8080)
WEB_PORT=8080

# Enable HTTP Basic Authentication (default: false)
# Set to 'true' for production environments
WEB_AUTH_ENABLED=false

# Basic Auth credentials (required if WEB_AUTH_ENABLED=true)
WEB_BASIC_AUTH_USERNAME=admin
WEB_BASIC_AUTH_PASSWORD=change-me-in-production

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum log file size in MB before rotation (default: 5)
LOG_MAX_SIZE_MB=5

# Number of backup log files to keep (default: 1)
# Older logs are compressed to .zip
LOG_MAX_FILES=1

# Compress rotated logs to .zip (default: true)
LOG_COMPRESS=true

# ============================================================================
# System Settings
# ============================================================================

# Timezone for OpenHAB (optional)
TZ=Europe/Berlin
